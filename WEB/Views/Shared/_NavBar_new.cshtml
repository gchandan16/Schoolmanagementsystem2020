@model SHARED.BaseModel
@using WEB.AppCode
<!-- Left side column. contains the logo and sidebar -->

<header class="main-header">

    <!-- Logo -->
    <a href="#" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg">
            <table>
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.BaseSessionInfo.SchoolLogo))
                        {


                            <img style="width:100%;height:20% " ; src="@Model.BaseSessionInfo.SchoolLogo">

                        }
                        else
                        {
                            @Model.BaseSessionInfo.SchoolName
                        }
                    </td>
                </tr>
            </table>
           
        </span>
    </a>

    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- Messages: style can be found in dropdown.less-->
                <li class="dropdown messages-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-envelope-o"></i>
                        <span class="label label-success">4</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="header">You have complaint 4 messages</li>
                        <li>
                            <!-- inner menu: contains the actual data -->
                            <ul class="menu">
                                <li>
                                    <!-- start message -->
                                    <a href="#">
                                        <div class="pull-left">
                                            <i class="fa fa-envelope-o"></i>
                                        </div>
                                        <h4>
                                            Pending Task
                                            <small><i class="fa fa-clock-o"></i> 5 mins</small>
                                        </h4>
                                        <p>We will work on future</p>
                                    </a>
                                </li><!-- end message -->
                           
                            </ul>
                        </li>
                        <li class="footer"><a href="#">See All Messages</a></li>
                    </ul>
                </li>
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                        <img src="@(Model.BaseUserInfo.EMPIMGPATH)" class="user-image" alt="@(Model.BaseUserInfo.FULLNAME)">
                        <span class="hidden-xs">@Model.BaseUserInfo.FULLNAME</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="@(Model.BaseUserInfo.EMPIMGPATH)" class="img-circle" alt="@(Model.BaseUserInfo.FULLNAME)">
                            <p>
                                @if (Model != null && Model.BaseUserInfo != null)
                                {
                                    <small>Orgnisation Name:@Model.BaseSessionInfo.SchoolName</small>
                                    <small>Session: @Model.BaseSessionInfo.FinancialYear</small>
                                    <small>UserName: @(Model.BaseUserInfo.USERNAME)</small>
                                   
                                }
                            </p>
                        </li>
                        <!-- Menu Body-->


                        <li class="user-body">
                            <div class="pull-left">
                                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Get, new { id = "ResetPasswordForm", @style = "color:green !important;" }))
                                { }
                                <a href="javascript:document.getElementById('ResetPasswordForm').submit()"> My Profile</a>
                            </div>
                            <div class="pull-right">
                                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Get, new { id = "ResetPasswordForm", @style = "color:green !important;" }))
                                { }
                                <a href="javascript:document.getElementById('ResetPasswordForm').submit()"> Reset Password</a>
                            </div>
                            <!--  <div class="col-xs-4 text-center">
                    <a href="#">Sales</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Friends</a>
                </div>
                  -->
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="#" class="btn btn-default btn-flat">Orgnisation Info</a>
                            </div>

                            <div class="pull-right">
                                @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {@Html.AntiForgeryToken()}
                                <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Log out</a>
                            </div>
                        </li>
                    </ul>
                </li>


                <!-- Tasks: style can be found in dropdown.less -->
                @*<li class="dropdown tasks-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-flag-o"></i>
               <span class="label label-danger">9</span>
            </a>
            <ul class="dropdown-menu">
                <li class="header">


                </li>
                <li class="header">


                </li>
                <li class="header">

                </li>


            </ul>
        </li>*@

            </ul>
        </div>
    </nav>
</header>

<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <div style="padding-top:5px;">
            <a href="/home/index" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <!-- logo for regular state and mobile devices -->
                @if (!string.IsNullOrEmpty(Model.BaseSessionInfo.SchoolLogo))
                {
                    <span class="logo-lg">
                        &nbsp;&nbsp;<img src="@Model.BaseSessionInfo.SchoolLogo" style="width:30px;height:30px;">&nbsp;&nbsp;@Model.BaseSessionInfo.SchoolName
                    </span>
                }
                else
                {
                    <span>@Model.BaseSessionInfo.SchoolName</span>
                }

            </a>
        </div>
        <!-- Sidebar user panel -->
        <div class="user-panel" style="padding-top:30px;">

            <div class="pull-left image">
                @if (Model != null && Model.BaseUserInfo != null)
                {
                    <img src="@(Model.BaseUserInfo.EMPIMGPATH)" class="img-circle" title="@(Model.BaseUserInfo.FULLNAME)" alt="@(Model.BaseUserInfo.FULLNAME)" />
                }
                else
                {
                    <img src="/Content/Images/5.jpg" class="img-circle" alt="@(Model.BaseUserInfo.FULLNAME)" title="@(Model.BaseUserInfo.FULLNAME)" />
                }
            </div>
            <div class="pull-left info">
                <div id="currettime"></div>
               



                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                
            </div>
        </div>

        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="active treeview">
                <a href="~/Home/Index">
                    <i class="fa fa-home"></i> <span>Dashboard</span> </i>
                </a>

            </li>
            @Html.Raw(Model.usermenu)
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>

<script>
    var todaytime = setInterval(selftimer, 1000);
    function selftimer() {
        var d = new Date();
        document.getElementById('currettime').innerHTML = d.toLocaleTimeString();
    }

</script>
<style>
    .active{
        background-color:green;
    }
</style>