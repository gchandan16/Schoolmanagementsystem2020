@model SHARED.Ledger
@using SHARED
@{
    ViewBag.Title = "Ledger Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<section class="content-header">
    <h4>
        Ledger Entry
    </h4>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Ledger Entry</li>
    </ol>
</section>

@using (Html.BeginForm("LedgerEntry", "Fee", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-2">
                                <label for="pwd" class="redlabel">
                                    Description:
                                </label>
                            </div>
                            <div class="col-lg-2">
                                @Html.TextBoxFor(m => m.Description, new { @class = "form-control mandate", @msg = "Please enter description." })
                            </div>
                            <div class="col-lg-2">
                                <label for="pwd">
                                    Type:
                                </label>
                            </div>
                            <div class="col-lg-2">
                                @Html.DropDownListFor(m => m.DescriptionType, new List<SelectListItem>() { new SelectListItem { Text = "FeeDeposit", Value = "FeeDeposit" }, new SelectListItem { Text = "Salary", Value = "Salary" }, new SelectListItem { Text = "Other", Value = "Other" } }, "-Select-", new { @class = "form-control mandate", @msg = "Please select type" })
                            </div>

                            <div class="col-lg-2">
                                <label for="pwd">
                                    Transaction Date:
                                </label>
                            </div>
                            <div class="col-lg-2">
                                @Html.TextBoxFor(a => a.EffectiveDate, new { @class = "form-control mandate datepicker" })
                            </div>


                        </div>
                        <br />
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-2">
                                    <label for="pwd" class="redlabel">
                                        Amount:
                                    </label>
                                </div>
                                <div class="col-lg-2">
                                    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control mandate", @placeholder = "Amount", @msg = "Please enter amount.", @pat = "^[0-9]+(.[0-9]{1,2})?$", @onkeypress = "return isKeyValidDecimal(event,'46,48-57');", @autocomplete = "off" })
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="col-sm-12 col-md-12 right_bottom">
                            <input type="submit" value="Debit" name="btnType" class="btn btn-primary pull-right margin" id="btnDebit" onclick="return inputValidation();" />
                            <input type="submit" value="Credit" name="btnType" class="btn btn-primary pull-right margin" id="btnCredit" onclick="return inputValidation();" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
}
